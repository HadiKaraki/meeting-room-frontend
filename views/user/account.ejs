<% layout('layouts/boilerplate')%>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../account.css">
    <title>Signup</title>
</head>
    <form action="/user/account" method="POST" id="signup-form">
        <section class="h-100 h-custom gradient-custom-2">
            <div class="container py-5 h-100">
              <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-8">
                  <div class="card card-registration shadow card-registration-2" style="border-radius: 15px;">
                    <div class="card-body p-0">
                      <div class="row g-0">
                        <div class="col-lg-12">
                          <div class="p-5">
                            <h3 class="fw-bold mb-5" style="color: black; text-decoration: underline;">My account</h3>
                            <div class="row">
                              <div class="col-md-6 mb-4 pb-2">
                                <div class="form-outline">
                                  <input type="text" id="first-name" name="firstName" value="<%= currentUser.firstName %>" class="form-control form-control-lg" required/>
                                  <label class="form-label" for="first-name">First name</label>
                                  <h5 id="firstNameCheck" style="color: red;">**First name is missing</h5>
                                </div>
                              </div>
                              <div class="col-md-6 mb-4 pb-2">
                                <div class="form-outline">
                                  <input type="text" id="last-name" name="lastName" value="<%= currentUser.lastName %>" class="form-control form-control-lg" required/>
                                  <label class="form-label" for="last-name">Last name</label>
                                  <h5 id="lastNameCheck" style="color: red;">**Last name is missing</h5>
                                </div>
                              </div>
                            </div>
                            <div class="mb-4 pb-2">
                              <label class="form-label" for="company-id" name="companyId">Company ID</label>
                              <select class="select" id="company-id" name="companyId" required>
                                <option selected value="<%= currentUser.companyId %>"><%= currentUser.companyId %></option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                              </select>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">
                                  <div class="form-outline">
                                    <input type="text" id="username" name="userName" value="<%= currentUser.userName %>" class="form-control form-control-lg" required/>
                                    <label class="form-label" for="username">Username</label>
                                    <h5 id="usercheck" style="color: red;">**Username is missing</h5>
                                  </div>
                                </div>
                                <div class="col-md-6 mb-4 pb-2">
                                  <div class="form-outline">
                                    <input type="text" id="phone-nb" name="phoneNumber" value="<%= currentUser.phoneNumber %>" class="form-control form-control-lg" required/>
                                    <label class="form-label" for="phone-nb">Phone number</label>
                                    <h5 id="phoneNumberCheck" style="color: red;">**Phone number is missing</h5>
                                  </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">
                                  <div class="form-outline">
                                    <input type="text" id="age" name="age" value="<%= currentUser.age %>" class="form-control form-control-lg" required/>
                                    <label class="form-label" for="age">Age</label>
                                    <h5 id="ageCheck" style="color: red;">**Age is missing</h5>
                                  </div>
                                </div>
                                <div class="col-md-6 mb-4 pb-2">
                                  <div class="form-outline">
                                    <input type="text" id="email" name="email" value="<%= currentUser.email %>" class="form-control form-control-lg" required/>
                                    <label class="form-label" for="email">Email</label>
                                    <small id="emailvalid" class="form-text text-muted invalid-feedback">Your email must be a valid email</small>
                                    <h5 id="emailCheck" style="color: red;">**Email is missing</h5>
                                  </div>
                                </div>
                              </div>
                              <button type="button" id="submitbtn" class="btn btn-dark btn-lg" data-mdb-ripple-color="dark">Submit</button>
                          </div>
                        </div>
                    </section>
                </form>
                <script src="../accountValidator.js"></script>