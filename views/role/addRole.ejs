<% layout('layouts/boilerplate')%>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../addRole.css">
    <title>Schedule meeting</title>
</head>
<form method="POST" action="/role/add" id="role-form">
  <section class="h-100 h-custom gradient-custom-2">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-8">
          <div class="card card-registration shadow card-registration-2" style="border-radius: 15px;">
            <div class="card-body p-0">
              <div class="row g-0">
                <div class="col-lg-12">
                  <div class="p-5">
                    <h3 class="fw-bold mb-5" style="color: black; text-decoration: underline;">Add a role</h3>
                    <div class="row">
                      <div class="col-md-6 mb-4 pb-2">
                        <div class="form-outline">
                          <input type="text" id="name" name="roleName" class="form-control form-control-lg" required/>
                          <label class="form-label" for="name">Role name</label>
                          <h5 id="nameCheck" style="color: red;">**Name is missing</h5>
                        </div>
                      </div>
                    </div>
                      <button type="button" id="submitBtn" class="btn btn-dark btn-lg" data-mdb-ripple-color="dark">Submit</button>
                  </div>
                </div>
            </section>
      </form>
      <style>
        footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            text-align: center;
        }
      </style>
      <script src="../../addRole.js"></script>