<% layout('layouts/boilerplate')%>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../showCompanies.css">
    <title>All companies</title>
</head>

<table class="table table-striped table-bordered table-dark" style="max-width:90%; margin: auto;">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">email</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
    <% for(let company of companies.$values) {%>
      <tr>
        <th scope="row"><%= company.id %></th>
        <td><a href="/company/<%= company.id %>"><%= company.name %></a></td>
        <td><%= company.email %></td>
        <th scope="row"><a href="/company/<%= company.id %>/delete" style="color: red;">delete</a></th>
      </tr>
    <% }%>
    </tbody>
  </table>
  <style>
    footer {
        position: fixed;
        left: 0;
        bottom: 0;
        width: 100%;
        text-align: center;
    }
  </style>