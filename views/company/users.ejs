<% layout('layouts/boilerplate')%>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../showCompanyUsers.css">
    <title>All users</title>
</head>

<table class="table table-striped table-bordered table-dark" style="max-width:90%; margin: auto;">
    <thead>
      <tr>
        <th scope="col">Userame</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">ID</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
    <% for(let user of users) {%>
      <tr>
        <th scope="row"><a href="/user/<%= user.id %>"><%= user.userName %></a></th>
        <th scope="row"><%= user.firstName %></th>
        <td><%= user.email %></td>
        <td><%= user.id %></td>
        <th scope="row"><a href="/user/<%= user.id %>/delete" style="color: red;">delete</a></th>
      </tr>
    <% }%>
    </tbody>
  </table>
  <style>
    footer {
        position: fixed;
        left: 0;
        bottom: 0;
        width: 100%;
        text-align: center;
    }
  </style>